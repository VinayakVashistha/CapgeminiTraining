package capgemini;

import java.util.Scanner;

class MatrixTasks {

    Scanner inputReader = new Scanner(System.in);

    void performTranspose() {
        System.out.print("Enter number of rows: ");
        int totalRows = inputReader.nextInt();

        System.out.print("Enter number of columns: ");
        int totalColumns = inputReader.nextInt();

        int[][] matrix = new int[totalRows][totalColumns];

        System.out.println("Enter matrix elements:");
        for (int rowIndex = 0; rowIndex < totalRows; rowIndex++) {
            for (int colIndex = 0; colIndex < totalColumns; colIndex++) {
                matrix[rowIndex][colIndex] = inputReader.nextInt();
            }
        }

        System.out.println("Transpose of matrix:");
        for (int colIndex = 0; colIndex < totalColumns; colIndex++) {
            for (int rowIndex = 0; rowIndex < totalRows; rowIndex++) {
                System.out.print(matrix[rowIndex][colIndex] + " ");
            }
            System.out.println();
        }
    }

    void rotateTwoByTwoMatrix() {
        int[][] smallMatrix = new int[2][2];

        System.out.println("Enter elements of 2x2 matrix:");
        for (int row = 0; row < 2; row++) {
            for (int col = 0; col < 2; col++) {
                smallMatrix[row][col] = inputReader.nextInt();
            }
        }

        System.out.println("Matrix after 90 degree rotation:");
        for (int col = 0; col < 2; col++) {
            for (int row = 1; row >= 0; row--) {
                System.out.print(smallMatrix[row][col] + " ");
            }
            System.out.println();
        }
    }

    void multiplyMatrices() {
        int[][] firstMatrix = new int[3][2];
        int[][] secondMatrix = new int[2][4];
        int[][] resultMatrix = new int[3][4];

        System.out.println("Enter values for first matrix (3x2):");
        for (int row = 0; row < 3; row++) {
            for (int col = 0; col < 2; col++) {
                firstMatrix[row][col] = inputReader.nextInt();
            }
        }

        System.out.println("Enter values for second matrix (2x4):");
        for (int row = 0; row < 2; row++) {
            for (int col = 0; col < 4; col++) {
                secondMatrix[row][col] = inputReader.nextInt();
            }
        }

        for (int row = 0; row < 3; row++) {
            for (int col = 0; col < 4; col++) {
                for (int k = 0; k < 2; k++) {
                    resultMatrix[row][col] += firstMatrix[row][k] * secondMatrix[k][col];
                }
            }
        }

        System.out.println("Resultant matrix after multiplication:");
        for (int row = 0; row < 3; row++) {
            for (int col = 0; col < 4; col++) {
                System.out.print(resultMatrix[row][col] + " ");
            }
            System.out.println();
        }
    }

    void flipMatrixVertically() {
        int[][] dataMatrix = new int[4][3];

        System.out.println("Enter elements of 4x3 matrix:");
        for (int row = 0; row < 4; row++) {
            for (int col = 0; col < 3; col++) {
                dataMatrix[row][col] = inputReader.nextInt();
            }
        }

        System.out.println("Matrix after vertical flip:");
        for (int row = 3; row >= 0; row--) {
            for (int col = 0; col < 3; col++) {
                System.out.print(dataMatrix[row][col] + " ");
            }
            System.out.println();
        }
    }
}

public class ArrayHw {
    public static void main(String[] args) {

        Scanner userInput = new Scanner(System.in);
        MatrixTasks matrixTasks = new MatrixTasks();

        while (true) {
            System.out.println("\n1. Transpose Matrix");
            System.out.println("2. Rotate 2x2 Matrix");
            System.out.println("3. Matrix Multiplication");
            System.out.println("4. Flip Matrix");
            System.out.println("5. Exit");
            System.out.print("Select an option: ");

            int userChoice = userInput.nextInt();

            switch (userChoice) {
                case 1:
                    matrixTasks.performTranspose();
                    break;
                case 2:
                    matrixTasks.rotateTwoByTwoMatrix();
                    break;
                case 3:
                    matrixTasks.multiplyMatrices();
                    break;
                case 4:
                    matrixTasks.flipMatrixVertically();
                    break;
                case 5:
                    System.out.println("Program terminated.");
                    return;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
    }
}

